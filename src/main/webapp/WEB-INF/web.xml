<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ListCategoriesServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.ListCategoriesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoriesServlet</servlet-name>
        <url-pattern>/admin/Categories/ListCategories</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListFoodInformationServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.ListFoodInformationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListFoodInformationServlet</servlet-name>
        <url-pattern>/admin/FoodInformation/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateFoodInformationServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.CreateFoodInformationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateFoodInformationServlet</servlet-name>
        <url-pattern>/admin/FoodInformation/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteFoodInformationServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.DeleteFoodInformationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFoodInformationServlet</servlet-name>
        <url-pattern>/admin/FoodInformation/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DetailFoodInformationServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.DetailFoodInformationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailFoodInformationServlet</servlet-name>
        <url-pattern>/admin/FoodInformation/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditFoodInformationServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.EditFoodInformationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditFoodInformationServlet</servlet-name>
        <url-pattern>/admin/FoodInformation/edit</url-pattern>
    </servlet-mapping>

<!--    user-->
    <servlet>
        <servlet-name>ListFoodInformationUserServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.user.ListFoodInformationUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListFoodInformationUserServlet</servlet-name>
        <url-pattern>/admin/user/page/Products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowCartServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.user.ShowCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowCartServlet</servlet-name>
        <url-pattern>/cart/show</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.user.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/cart/add</url-pattern>
    </servlet-mapping>
</web-app>